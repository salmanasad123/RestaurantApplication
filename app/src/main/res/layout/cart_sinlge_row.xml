<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:id="@+id/cartItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cartItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnCartIncrease"
        android:layout_toStartOf="@+id/btnCartDelete"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="240dp" />

    <Button
        android:id="@+id/btnCartIncrease"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/cartItemName"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/cartItemName"
        android:text="+"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="95dp" />

    <Button
        android:id="@+id/btnCartDelete"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cartItemPrice"
        android:layout_alignBottom="@+id/cartItemPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCartDecrease"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/btnShowQuantity"
        android:layout_centerHorizontal="true"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/cartItemPrice"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btnShowQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCartIncrease"
        android:layout_alignBottom="@+id/btnCartIncrease"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btnCartIncrease"
        android:text="QTY"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="149dp" />
</RelativeLayout>