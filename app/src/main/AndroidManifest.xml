<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.salman.restaurantapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetRestaurants"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".SortActivity" />
        <activity android:name=".GetRestaurantMenuCategories" />
        <activity android:name=".ShowMenuProducts" />
        <activity android:name=".CartActivity" />
        <activity android:name=".RestaurantDetailsActivity" />
        <activity android:name=".FeedbackActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CustomerAccountActivity"></activity>
    </application>

</manifest>